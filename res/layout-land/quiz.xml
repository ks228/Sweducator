<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/quizLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/quizWordView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Quiz word"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:clickable="true" />


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizWordView" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/quizLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/quizSubLayoutUpperBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

	        <TextView
	            android:id="@+id/defView0"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical|center_horizontal"
	            android:text="Definition 0"
	            android:textColor="#808080"
	            android:clickable="true"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <TextView
	            android:id="@+id/defView1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical|center_horizontal"
	            android:text="Definition 1"
	            android:textColor="#808080"
	            android:clickable="true"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quizSubLayoutLowerBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

	        <TextView
	            android:id="@+id/defView2"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical|center_horizontal"
	            android:text="Definition 2"
	            android:textColor="#808080"
	            android:clickable="true"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <TextView
	            android:id="@+id/defView3"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical|center_horizontal"
	            android:text="Definition 3"
	            android:textColor="#808080"
	            android:clickable="true"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
    	</LinearLayout>
            
        </LinearLayout>


</LinearLayout>